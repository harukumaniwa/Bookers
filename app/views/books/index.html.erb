<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @posts.each do |post| %>
  <tbody>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to 'Show', book_path(post) %></td>
      <td><%= link_to 'Edit', edit_book_path(post) %></td>
      <td><%= link_to 'Destroy', book_path(post), method: :delete, data: { confirm: 'Are you sure?' }%></td>
    </tr>
  </tbody>
  <% end %>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
      <h2><%= @book.errors.count %>errors prohibited this book from being saved: </h2>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
<% end %>
